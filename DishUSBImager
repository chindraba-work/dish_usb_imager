script_source="${BASH_SOURCE[0]}"
script_name="$(basename $script_source)"
while [ -L "$script_source" ]
do
    script_dir="$( cd -P "$( dirname "$script_source" )" && pwd )"
    script_source="$( readlink "$script_source" )"
    [[ $script_source != /* ]] && script_source="$script_dir/$script_source"
done
script_dir="$( cd -P "$( dirname "$script_source" )" && pwd )"

_messageOut() { printf "%s\n" "${@}"; }

usage_text="${script_name}: A program to download STB update images for Dish TV techs.
Usage:
    ${script_name} option [option [option]]

Use ${script_name} --help for more information.
"

usage() {
    _messageOut "${usage_text}" >&2
}

# Check for parameters, minimum of one required
if [[ 0 -eq $# ]];
then
    ! usage >&2;
    exit 1;
fi
while [[ 0 -ne $# ]]
do
    _messageOut "Command option $1 read"
    shift
done

# vim: syntax=bash ts=4 sw=4 sts=4 et sr
